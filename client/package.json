{
	"name": "php-ci",
  "displayName": "PHP intellisense for codeigniter",
	"description": "Code completion for PHP codeigniter framework",
	"author": "Small",
	"license": "MIT",
	"version": "0.2.2",
	"publisher":"small",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Languages"
  ],
  "keywords":["PHP","CI","codeigniter"],
  "icon":"image/CI.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/smallp/vscode-ci.git"
	},
	"bugs": {
		"url": "https://github.com/smallp/vscode-ci/issues"
	},
  "activationEvents": [
		"workspaceContains:/system/"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CI autoload",
      "properties": {
        "CI.model": {
          "type": "array",
          "default": [],
          "description": "Auto load models. Eg: user/account"
        },
        "CI.other": {
          "type": "array",
          "default": [
            "system/core/Common.php"
          ],
          "description": "Path of files that need parse. That is just for addition const support."
        }
      }
    },
    "commands":[{
      "command":"extension.refreshModel",
      "title": "CI:refresh Model"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.0.3"
  }
}
