{
    "name": "php-ci",
    "displayName": "PHP intellisense for codeigniter",
    "description": "Code completion for PHP codeigniter framework",
    "author": "Small",
    "license": "MIT",
    "version": "0.2.7",
    "publisher": "small",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "PHP",
        "CI",
        "codeigniter"
    ],
    "icon": "image/CI.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/smallp/vscode-ci.git"
    },
    "bugs": {
        "url": "https://github.com/smallp/vscode-ci/issues"
    },
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CI autoload",
            "properties": {
                "CI.model": {
                    "type": "array",
                    "default": [],
                    "description": "Auto load models. Eg: user/account"
                },
                "CI.other": {
                    "type": "array",
                    "default": [
                        "system/core/Common.php"
                    ],
                    "description": "Path of files that need parse. That is just for addition const support."
                },
                "CI.system": {
                    "type": "string",
                    "default": "system",
                    "description": "Path of CI's system folder."
                },
                "CI.app": {
                    "type": "string",
                    "default": "application",
                    "description": "Path of CI's application folder."
                }
            }
        },
        "commands": [
            {
                "command": "extension.refreshModel",
                "title": "CI: refresh Model"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.5",
        "vscode-languageclient": "^3.4.2"
    }
}